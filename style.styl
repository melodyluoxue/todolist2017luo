body, html
  background-color black
  margin 0
  padding 0 0 65px 0
  overflow-x hidden
  min-height 100%
  height auto

h1
  text-align center
  color white
  font-family "Helvetica Neue"
  font-size 50px
  font-weight 100
  margin 15px 0

ul#todo-list
  list-style none
  padding 0
  margin 0
  display flex
  flex-direction column-reverse
  & > div
    position relative
    width 100%
    box-sizing border-box
    margin-left 0
    order 0
    for num in (1...15)
      &.notCompleted:nth-of-type({num}) div.container
        background-color rgba(235, 0 + num * 17, 23, 1)
    li
      position relative
      z-index 1
      div.container
        height 30px
        width 100%
        padding 10px
        line-height 30px
        margin-bottom 1px
        background-color #ebee17
        input
          background-color transparent
          outline none
          border none
          color white
          font-size 16px
          width calc(100% - 20px)
    &.completed
      order -1
      li
        div.container
          background-color black
          input
            color #999999
            text-decoration line-through
    &:before, &:after
      position absolute
      top 0
      bottom 0
      height 50px
      width 50px
      line-height 30px
      padding 10px
      box-sizing border-box
      font-size 20px
    &:before
      content '✔︎'
      color rgba(100, 169, 104, 1)
      left 0
    &:after
      content '✖︎'
      color rgba(235, 0, 23, 1)
      right 0

div#clear-mask
  position fixed
  bottom 0
  left 0
  right 0
  top 50px
  background-color rgba(0, 0, 0, 0.7)
  opacity 0
  display none
  transition opacity 0.6s
  z-index 99

div#tool-bar
  position fixed
  z-index 1
  bottom 0
  left 0
  right 0
  height 50px
  padding-bottom 15px
  a
    color white
    height 50px
    line-height 50px
    text-decoration none
    text-align center
    float left
    width 33.3%
    img
      vertical-align middle
    &:nth-of-type(1), &:nth-of-type(3)
      img
        margin 10px 2px
